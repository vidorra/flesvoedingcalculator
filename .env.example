# EmailJS Configuration
# Get these values from https://www.emailjs.com/

# Your EmailJS Public Key (found in Account -> API Keys)
NEXT_PUBLIC_EMAILJS_PUBLIC_KEY=your_public_key_here

# Your EmailJS Service ID (found in Email Services)
NEXT_PUBLIC_EMAILJS_SERVICE_ID=your_service_id_here

# Your EmailJS Template ID (found in Email Templates)
NEXT_PUBLIC_EMAILJS_TEMPLATE_ID=your_template_id_here

# Your EmailJS Private Key (found in Account -> API Keys) - server-side only
EMAILJS_PRIVATE_KEY=your_private_key_here

# reCAPTCHA Configuration
# Get these values from https://www.google.com/recaptcha/admin

# reCAPTCHA Site Key (public, used in frontend)
NEXT_PUBLIC_RECAPTCHA_SITE_KEY=your_recaptcha_site_key_here

# reCAPTCHA Secret Key (private, used on server)
RECAPTCHA_SECRET_KEY=your_recaptcha_secret_key_here

# Bol.com Partner API Configuration
# Get these values from https://partnerprogramma.bol.com/
# Register as a partner and create an API application

# Your Bol.com API Client ID (from Partner Dashboard -> API)
BOL_API_CLIENT_ID=your_client_id_here

# Your Bol.com API Client Secret (from Partner Dashboard -> API)
BOL_API_CLIENT_SECRET=your_client_secret_here

# Bol.com Product Feed API Configuration
# Get these credentials from https://partnerprogramma.bol.com/ -> Product Feed section
# These are separate credentials for downloading the full product catalog

# Product Feed Username (from Partner Dashboard -> Product Feed)
BOL_PRODUCT_FEED_USERNAME=your_feed_username_here

# Product Feed Password (from Partner Dashboard -> Product Feed)
BOL_PRODUCT_FEED_PASSWORD=your_feed_password_here

# Admin Panel Configuration
# Set a strong password for accessing /admin interface

# Admin Panel Password (set your own secure password)
ADMIN_PASSWORD=your_secure_admin_password_here